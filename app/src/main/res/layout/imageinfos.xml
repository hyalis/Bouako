<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Switch
        android:layout_width="450px"
        android:switchMinWidth="450px"
        android:thumbTextPadding="50px"
        android:layout_height="40px"
        android:id="@+id/type"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10px"
        />

    <com.m2dl.helloandroid.apnview.utils.CustomSwitch
        android:layout_width="450px"
        android:switchMinWidth="450px"
        android:thumbTextPadding="50px"
        android:layout_height="40px"
        android:id="@+id/valeur"
        android:layout_below="@+id/type"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15px" />

    <EditText
        android:layout_width="450px"
        android:layout_height="40px"
        android:inputType="textPersonName"
        android:id="@+id/commentaire"
        android:layout_below="@+id/valeur"
        android:layout_alignRight="@+id/valeur"
        android:layout_alignEnd="@+id/valeur"
        android:layout_marginTop="15px"
        android:background="#00000000"
        android:hint="Commentaire..."
        android:singleLine="true"
        android:textSize="35px"
        android:textColor="#ff000000"/>


    <ImageButton
        android:layout_width="80px"
        android:layout_height="80px"
        android:text="Valider"
        android:id="@+id/btnValidate"
        android:layout_below="@+id/commentaire"
        android:layout_alignRight="@+id/commentaire"
        android:layout_alignEnd="@+id/commentaire"
        android:layout_marginTop="15px"
        android:src="@drawable/start"
        android:scaleType="fitCenter"
        android:background="@null"/>




</RelativeLayout>